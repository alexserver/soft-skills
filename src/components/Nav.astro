<style>
  .header-menu {
    @apply py-4 hidden;
    @apply md:block md:py-6;
  }
  .header-menu ul {
    @apply list-none flex flex-col gap-3;
    @apply md:flex-row md:gap-3;
  }
  .header-menu ul li .mobile-only {
    @apply md:hidden;
  }
  .header-menu ul li .desktop-only {
    @apply hidden md:block;
  }
